<div class="jumbotron text-center bg-danger text-light">
    <h1>Eat Da Burger!</h1>
    <i class="fas fa-utensils" id="utensils-icon"></i>
</div>
<br>
<br>
<div class="row m-0">
    <div class="col-md-6 text-center bg-danger p-5 text-light">
        <h2>Burgers to devour...</h2>
        <hr class="bg-light"> {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
    </div>
    <div class="col-md-6 text-center bg-danger p-5 text-light">
        <h2>Devoured burgers!</h2>
        <hr class="bg-light"> {{#each burgers}} {{#if devoured}} {{> burgers/devoured-block}} {{/if}} {{/each}}
    </div>
</div>
<br>
<br>
<br>
<div class="row m-0">
    <div class="col align-self-center text-center bg-danger p-4 text-light">
        <h2>Add a Burger</h2>
        <br>
        <form class="create-form">
            <div class="form-group">
                <label for="ca" style="font-size: 150%;">Burger Name:</label>
                <input type="text" id="burger" name="name">
            </div>
            <div class="form-group">
                <label for="devoured">Have you ever devoured one of these?</label>
                <br>
                <input type="radio" name="devoured" value="0" checked> Not yet...
                <br>
                <input type="radio" name="devoured" value="1"> Yes!
            </div>
            <button class="btn btn-warning" type="submit">Add Burger</button>
        </form>
    </div>
</div>